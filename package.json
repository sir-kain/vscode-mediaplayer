{
	"name": "vscode-mediaplayer",
	"displayName": "vscode-mediaplayer",
	"description": "vscode extension to play media",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsmp.searchMedia",
				"title": "Search",
				"category": "Media player",
				"icon": {
					"dark": "src/assets/dark/search.png",
					"light": "src/assets/light/search.png"
				}
			},
			{
				"command": "vsmp.openFolder",
				"title": "Import local media",
				"category": "Media player",
				"icon": {
					"dark": "src/assets/dark/folder.svg",
					"light": "src/assets/light/folder.svg"
				}
			},
			{
				"command": "vsmp.play",
				"title": "Play",
				"category": "Media player"
			},
			{
				"command": "vsmp.loadLocalPlaylist",
				"title": "Load local playlist",
				"category": "Media player",
				"icon": {
					"dark": "src/assets/dark/play.png",
					"light": "src/assets/light/play.png"
				}
			},
			{
				"command": "vsmp.loadSearchPlaylist",
				"title": "Load search playlist",
				"category": "Media player",
				"icon": {
					"dark": "src/assets/dark/play.png",
					"light": "src/assets/light/play.png"
				}
			},
			{
				"command": "vsmp.loadFavPlaylist",
				"title": "Load fav playlist",
				"category": "Media player",
				"icon": {
					"dark": "src/assets/dark/play.png",
					"light": "src/assets/light/play.png"
				}
			},
			{
				"command": "vsmp.pause",
				"title": "Pause",
				"category": "Media player"
			},
			{
				"command": "vsmp.resume",
				"title": "Resume",
				"category": "Media player"
			},
			{
				"command": "vsmp.next",
				"title": "Next",
				"category": "Media player"
			},
			{
				"command": "vsmp.prev",
				"title": "Previous",
				"category": "Media player"
			},
			{
				"command": "vsmp.prevTo",
				"title": "Go back",
				"category": "Media player"
			},
			{
				"command": "vsmp.nextTo",
				"title": "Jump to",
				"category": "Media player"
			},
			{
				"command": "vsmp.stop",
				"title": "Stop",
				"category": "Media player"
			},
			{
				"command": "vsmp.pl.favTrack",
				"title": "add track to favs list",
				"icon": {
					"dark": "src/assets/dark/fav.png",
					"light": "src/assets/light/fav.png"
				}
			},
			{
				"command": "vsmp.pl.unFavTrack",
				"title": "Remove track to favs list",
				"icon": {
					"dark": "src/assets/dark/unfav.png",
					"light": "src/assets/light/unfav.png"
				}
			},
			{
				"command": "vsmp.pl.deteleTrack",
				"title": "Delete track",
				"icon": {
					"dark": "src/assets/dark/delete.png",
					"light": "src/assets/light/delete.png"
				}
			}
		],
		"views": {
			"vsmp": [
				{
					"id": "vsmp.mediaList",
					"name": "Search"
				},
				{
					"id": "vsmp.fav",
					"name": "Favs"
				},
				{
					"id": "vsmp.openFolder",
					"name": "Local"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsmp",
					"title": "Media player",
					"icon": "src/assets/vscmpicon.png"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vsmp.searchMedia",
					"when": "view == vsmp.mediaList",
					"group": "navigation"
				},
				{
					"command": "vsmp.loadSearchPlaylist",
					"when": "view == vsmp.mediaList",
					"group": "navigation"
				},
				{
					"command": "vsmp.loadLocalPlaylist",
					"when": "view == vsmp.openFolder",
					"group": "navigation"
				},
				{
					"command": "vsmp.loadFavPlaylist",
					"when": "view == vsmp.fav",
					"group": "navigation"
				},
				{
					"command": "vsmp.openFolder",
					"when": "view == vsmp.openFolder",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vsmp.pl.favTrack",
					"when": "view == vsmp.openFolder",
					"group": "inline"
				},
				{
					"command": "vsmp.pl.unFavTrack",
					"when": "view == vsmp.fav",
					"group": "inline"
				},
				{
					"command": "vsmp.pl.deteleTrack",
					"when": "view == vsmp.openFolder",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^12.0.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/node-fetch": "^2.3.4",
		"node-fetch": "^2.6.0",
		"node-mpv": "https://github.com/00SteinsGate00/Node-MPV.git#Node-MPV-2",
		"simple-youtube-api": "^5.1.1"
	}
}