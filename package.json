{
	"name": "vscode-mediaplayer",
	"displayName": "vscode-mediaplayer",
	"description": "vscode extension to play media",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsmp.searchMedia",
				"title": "Search",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.openFolder",
				"title": "Import local media",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.play",
				"title": "Play",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.pause",
				"title": "Pause",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.resume",
				"title": "Resume",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.next",
				"title": "Next",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.prev",
				"title": "Previous",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			},
			{
				"command": "vsmp.stop",
				"title": "Stop",
				"category": "Media player",
				"icon": "src/assets/music-player.svg"
			}
		],
		"views": {
			"vsmp": [
				{
					"id": "vsmp.mediaList",
					"name": "Search"
				},
				{
					"id": "vsmp.play",
					"name": "Playlist"
				},
				{
					"id": "vsmp.openFolder",
					"name": "Local"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsmp",
					"icon": "src/assets/crotchet.svg",
					"title": "Media player"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vsmp.searchMedia",
					"group": "navigation"
				},
				{
					"command": "vsmp.openFolder",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^12.0.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/node-fetch": "^2.3.4",
		"node-fetch": "^2.6.0",
		"node-mpv": "https://github.com/00SteinsGate00/Node-MPV.git#Node-MPV-2",
		"simple-youtube-api": "^5.1.1"
	}
}
